/*
 ** You can extend webpack config here
 */
{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "lib": ["esnext", "esnext.asynciterable", "dom"],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": false,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"],
      "@/lib/*": ["./lib/*"],
      "@/compontents/*": ["./components"],
      "@/pages/*": ["./pages/"],
      "@/store/*": ["./store/*"],
      "@/mixins/*": ["./mixins/*"]
    },
    "types": ["@types/node", "@nuxt/types", "@nuxtjs/axios", "@types/jest"]
  },
  "exclude": ["node_modules"]
}
